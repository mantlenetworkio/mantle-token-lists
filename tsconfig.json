{
  "compilerOptions": {
    "outDir": ".",
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "esModuleInterop": true,
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules/**/*", "dist"],
  "include": [
    "index.ts",
    "mantle.tokenlist.json",
    "package.json",
    "src/**/*",
    "bin/**/*"
  ]
}
